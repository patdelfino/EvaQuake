<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Top Section: Welcome, Subject, Grade/Room -->
        <LinearLayout
            android:id="@+id/home_top_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <!-- Welcome Section -->
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:fontFamily="@font/helvetica_neue_family"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="#000080"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"/>

            <!-- Current Subject Display -->
            <TextView
                android:id="@+id/current_subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Subject: Not Set"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/helvetica_neue_medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/grade_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 8 - Room 305"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/helvetica_neue_medium" />
        </LinearLayout>

        <!-- Feature Cards (now arranged vertically with descriptions) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Safety Guides Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_safety_guides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ADD1EF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/safety_guides"
                        android:contentDescription="@string/desc_safety_guides_icon"
                        android:layout_marginEnd="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety Guides"
                            android:textColor="@color/dark_grey"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/helvetica_neue_medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn essential tips and procedures for earthquake safety."
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_neue_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About Earthquakes Card (Moved to second position) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_about_earthquakes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ADD1EF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/abouts"
                        android:contentDescription="@string/desc_about_earthquakes_icon"
                        android:layout_marginEnd="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Earthquakes"
                            android:textColor="@color/dark_grey"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/helvetica_neue_medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Understand the science behind earthquakes and their impact."
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_neue_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Scan QR for navigation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_scan_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ADD1EF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/scanqr"
                        android:contentDescription="@string/desc_qr_scan_icon"
                        android:layout_marginEnd="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan QR for Navigation"
                            android:textColor="@color/dark_grey"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/helvetica_neue_medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quickly find your way around the building during drills or emergencies."
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_neue_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Emergency Card (Hotlines and Details) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ADD1EF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/emergencyic"
                        android:contentDescription="@string/desc_emergency_icon"
                        android:layout_marginEnd="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Hotlines &amp; Details"
                            android:textColor="@color/dark_grey"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/helvetica_neue_medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Access critical contact numbers and emergency procedures."
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_neue_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Manage Schedule Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_manage_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ADD1EF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_schedule"
                        android:contentDescription="@string/desc_manage_schedule_icon"
                        android:layout_marginEnd="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Schedule"
                            android:textColor="@color/dark_grey"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:fontFamily="@font/helvetica_neue_medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set up your weekly class schedule and view your current subject."
                            android:textColor="@color/dark_grey"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_neue_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
