<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige_bg"
    tools:context=".LandingActivity">

    <!-- Top Blue Section -->
    <View
        android:id="@+id/top_blue_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_blue_bg"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cloud Shape at the bottom of the blue section -->
    <View
        android:id="@+id/cloud_shape_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/cloud_shape_background"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- "Hi There!" Title -->
    <TextView
        android:id="@+id/hi_there_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_hi_there_title"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/helvetica_neue_family"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Graphic (Cube/Phone) -->

    <!-- Guideline for the top of content section (where the buttons start) -->

    <ImageView
        android:id="@+id/main_graphic"
        android:layout_width="178dp"
        android:layout_height="172dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Main graphic"
        android:src="@drawable/main_graphicc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_there_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"> <!-- Adjust bias to position buttons -->

        <!-- I have an account button -->
        <Button
            android:id="@+id/button_i_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/landing_i_have_account_button"
            android:textColor="@color/button_text_color"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/button_bg_color"
            android:minHeight="56dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica_neue_family"
            android:layout_marginBottom="16dp" />

        <!-- Create an account button -->
        <Button
            android:id="@+id/button_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/landing_create_account_button"
            android:textColor="@color/button_text_color"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/button_bg_color"
            android:minHeight="56dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica_neue_family" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
