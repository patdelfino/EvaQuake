<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF0000"> <!-- Red background for emergency -->

    <TextView
        android:id="@+id/emergency_drill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Drill in Progress!"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- You can add more UI elements here for your drill,
         such as instructions, timers, or buttons to acknowledge safety. -->

</LinearLayout>
