<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE5F0"
    android:padding="32dp">

    <!-- "Create account" Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#333333">

    </TextView>

    <!-- Full Name EditText -->
    <EditText
        android:id="@+id/register_full_name"
        android:hint="@string/hint_full_name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- Student/Employee Number EditText -->
    <EditText
        android:id="@+id/register_student_employee_number"
        android:hint="@string/hint_student_employee_number"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- User Type Spinner (Dropdown) -->
    <Spinner
        android:id="@+id/register_user_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="8dp"
        android:entries="@array/user_types_array"
        android:layout_marginBottom="16dp" />

    <!-- NEW: Grade EditText -->
    <EditText
        android:id="@+id/register_grade"
        android:hint="Grade (e.g., 8)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- NEW: Room EditText -->
    <EditText
        android:id="@+id/register_room"
        android:hint="Room Number (e.g., 305)"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- Email EditText (from previous version, re-ordered) -->
    <EditText
        android:id="@+id/register_email"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/register_password"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="16dp" />

    <!-- Confirm Password EditText -->
    <EditText
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:autofillHints=""
        android:background="@drawable/rounded_edittext_white"
        android:hint="@string/hint_confirm_password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_color" />

    <!-- Register Button -->
    <Button
        android:id="@+id/register_button"
        android:text="@string/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_blue"
        android:textColor="@android:color/white"
        android:minHeight="50dp"
        android:textSize="18sp" />

    <!-- Login TextView (Wrapped in LinearLayout for better centering and touch target) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="24dp">
    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/login_redirect_text"
        android:textColor="#333333"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />
</LinearLayout>
    </LinearLayout>
