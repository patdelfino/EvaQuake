<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0E5D7"
        tools:context=".RegisterActivity">

        <!-- Top Section - "Back" Text -->
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/back_button_text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header - "Create an Account" Text -->
        <TextView
            android:id="@+id/create_an_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/helvetica_neue_family"
            android:text="@string/create_an_account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />

        <!-- Logo Image - Using a placeholder for now -->
        <ImageView
            android:id="@+id/register_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_graphicc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_an_account_title"
            tools:ignore="ContentDescription" />

        <!-- Cloud-like background at the bottom -->
        <View
            android:id="@+id/cloud_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/cloud_shape_background"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- All Input Fields, Checkbox, and Button container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/blue_rounded_top_card_background"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="80dp"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_image">

            <!-- Full Name -->
            <EditText
                android:id="@+id/full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_full_name"
                android:inputType="textPersonName"
                android:autofillHints="name"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Student/Employee Number -->
            <EditText
                android:id="@+id/student_employee_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_student_employee_number"
                android:inputType="number"
                android:autofillHints="username"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/full_name" />

            <!-- User Type Dropdown (Spinner) -->
            <Spinner
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:entries="@array/user_types_array"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:prompt="@string/select_user_type_prompt"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/student_employee_number" />

            <!-- Grade -->
            <EditText
                android:id="@+id/grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_grade"
                android:inputType="text"
                android:autofillHints="none"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item1" />

            <!-- Room Number -->
            <EditText
                android:id="@+id/room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_room"
                android:inputType="text"
                android:autofillHints="none"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grade" />

            <!-- Email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room" />

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:autofillHints="newPassword"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_white"
                android:fontFamily="@font/helvetica_neue_family"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword"
                android:autofillHints="newPassword"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#999999"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password" />

            <!-- Terms and Conditions Checkbox -->
            <CheckBox
                android:id="@+id/terms_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/helvetica_neue_family"
                android:text="@string/i_agree_text"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirm_password" />

            <TextView
                android:id="@+id/terms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_family"
                android:text="@string/terms_and_conditions_link"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showTermsAndConditionsDialog"
                app:layout_constraintBottom_toBottomOf="@+id/terms_checkbox"
                app:layout_constraintStart_toEndOf="@+id/terms_checkbox"
                app:layout_constraintTop_toTopOf="@+id/terms_checkbox" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#D6D6D6"
                android:fontFamily="@font/helvetica_neue_family"
                android:text="@string/button_register"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terms_text" />

            <!-- New "Log In" redirect link -->
            <TextView
                android:id="@+id/login_redirect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/helvetica_neue_family"
                android:text="@string/login_redirect_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
